{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Essencial para Injeção de Dependência
    "emitDecoratorMetadata": true,   // Essencial para Injeção de Dependência
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}